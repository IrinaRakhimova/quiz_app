<% layout("./layouts/layout.eta") %>
<h1 class="text-center mt-3">Registration form</h1>

<% if (it.validationErrors) { %>
<ul class="text-center text-danger">
    <% Object.keys(it.validationErrors).forEach((attribute) => { %>
         <% Object.values(it.validationErrors[attribute]).forEach((err) => { %>
            <li><%= err %></li>
        <% }); %>
    <% }); %>
</ul>
<% } %>

<form method="POST" action="/auth/register" class="text-center">
  Email:
  <input type="email" name="email" /><br/>
  Password:
  <input type="password" name="password" /><br/>
  <input type="submit" value="Register" class="btn btn-primary m-2 text-center" />
</form>

<a href="/auth/login" class="text-center">Already registered? Login here.</a>