<% layout("./layouts/layout.eta") %>
<div class="navbar d-flex justify-content-between bg-primary-subtle">
    <h1>QUIZ APP</h1>
    <ul class="d-grid gap-2 d-md-block">
        <li><a href="/auth/login" class="btn btn-primary text-light" type="button">Login</a></li>
        <li><a href="/auth/register" class="btn btn-primary text-light" type="button">Register</a></li>
    </ul>
</div>

<div class="d-flex justify-content-evenly">
    <div class="d-flex flex-column">
        <a href="/topics" class="btn btn-outline-primary" type="button">See topics (requires login)</a><br/>
        <a href="/quiz" class="btn btn-outline-primary" type="button">Quiz (requires login)</a><br/>
    </div>

    <div>
        <h1>Statistics!</h1>

        <p>Topics: <%= it.topicsCount %></p>
        <p>Questions: <%= it.questionsCount %></p>
        <p>Answers: <%= it.answersCount %></p>
    </div>
</div>